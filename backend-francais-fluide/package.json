{
  "name": "francais-fluide-backend",
  "version": "1.0.0",
  "description": "Backend API pour FrançaisFluide - Service séparé",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "dev-simple": "nodemon src/server-simple.js",
    "start": "node src/server.js",
    "build": "echo 'No build step required'",
    "test": "jest",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "migrate": "node scripts/migrate.js",
    "logs": "tail -f logs/combined.log",
    "docker:build": "docker build -t francais-fluide-backend .",
    "docker:run": "docker run -p 3001:3001 francais-fluide-backend"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4",
    "dotenv": "^16.3.1",
    "@prisma/client": "^5.22.0",
    "prisma": "^5.22.0",
    "stripe": "^14.25.0",
    "openai": "^4.20.1",
    "@anthropic-ai/sdk": "^0.9.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "node-fetch": "^2.7.0",
    "winston": "^3.11.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "tsx": "^4.6.0"
  },
  "keywords": [
    "français",
    "grammaire",
    "ia",
    "api",
    "backend",
    "express"
