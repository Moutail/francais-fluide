# Variables d'environnement de production pour FrançaisFluide
# Copiez ce fichier vers .env.production et remplissez les valeurs

# ===========================================
# CONFIGURATION GÉNÉRALE
# ===========================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://francais-fluide.vercel.app
NEXT_PUBLIC_API_URL=https://francais-fluide-api.railway.app

# ===========================================
# APIS IA
# ===========================================
# OpenAI (Priorité 1)
OPENAI_API_KEY=sk-...
OPENAI_API_KEY_BACKUP=sk-...
OPENAI_API_KEY_BACKUP2=sk-...

# Claude (Priorité 2)
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_API_KEY_BACKUP=sk-ant-...
ANTHROPIC_API_KEY_BACKUP2=sk-ant-...

# LanguageTool (Fallback)
LANGUAGETOOL_API_KEY=...
LANGUAGETOOL_API_URL=https://api.languagetool.org/v2

# Hugging Face (Optionnel)
HUGGINGFACE_API_KEY=hf_...

# ===========================================
# BASE DE DONNÉES
# ===========================================
# PostgreSQL (Railway)
DATABASE_URL=postgresql://username:password@host:port/database

# Redis (Railway)
REDIS_URL=redis://username:password@host:port

# ===========================================
# SÉCURITÉ
# ===========================================
# JWT et Chiffrement
JWT_SECRET=your-super-secret-jwt-key-here
ENCRYPTION_KEY=your-32-character-encryption-key
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=https://francais-fluide.vercel.app

# CORS
ALLOWED_ORIGINS=https://francais-fluide.vercel.app,https://www.francais-fluide.com

# ===========================================
# MONITORING ET ANALYTICS
# ===========================================
# Sentry (Error Tracking)
NEXT_PUBLIC_SENTRY_DSN=https://...
SENTRY_DSN=https://...
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Google Analytics
NEXT_PUBLIC_GA_ID=G-...

# Plausible Analytics (Alternative)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=francais-fluide.com
NEXT_PUBLIC_PLAUSIBLE_API_HOST=https://plausible.io

# ===========================================
# PERFORMANCE MONITORING
# ===========================================
NEXT_PUBLIC_PERFORMANCE_ENDPOINT=https://your-performance-endpoint.com/api/metrics

# ===========================================
# NOTIFICATIONS ET ALERTES
# ===========================================
# Slack
SLACK_WEBHOOK=https://hooks.slack.com/services/...
SLACK_TOKEN=xoxb-...

# Discord (Optionnel)
DISCORD_WEBHOOK=https://discord.com/api/webhooks/...

# Email (SendGrid)
SENDGRID_API_KEY=SG...
FROM_EMAIL=noreply@francais-fluide.com
ADMIN_EMAIL=admin@francais-fluide.com

# SMS (Twilio - Optionnel)
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# SERVICES EXTERNES
# ===========================================
# Vercel
VERCEL_TOKEN=...
VERCEL_ORG_ID=...
VERCEL_PROJECT_ID=...

# Railway
RAILWAY_TOKEN=...
RAILWAY_PROJECT_ID=...

# ===========================================
# IA ET SÉCURITÉ
# ===========================================
# Configuration IA Security
AI_RATE_LIMIT_ENABLED=true
AI_DAILY_BUDGET=10
AI_MONTHLY_BUDGET=200
AI_COST_MONITORING=true
AI_AUTO_DISABLE_ON_LIMIT=true

# Content Filtering
AI_CONTENT_FILTERING=true
AI_MAX_INPUT_LENGTH=4000
AI_BLOCK_PERSONAL_INFO=true
AI_BLOCK_INAPPROPRIATE=true

# ===========================================
# BACKUP ET SAUVEGARDE
# ===========================================
# AWS S3 (Pour les sauvegardes)
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_DEFAULT_REGION=us-east-1
BACKUP_S3_BUCKET=francais-fluide-backups

# ===========================================
# CDN ET ASSETS
# ===========================================
# Cloudflare
CLOUDFLARE_API_TOKEN=...
CLOUDFLARE_ZONE_ID=...
CLOUDFLARE_EMAIL=your-email@domain.com

# CDN URL (Si différent de Vercel)
CDN_URL=https://cdn.francais-fluide.com

# ===========================================
# DÉVELOPPEMENT ET DEBUG
# ===========================================
# Debug (Production)
DEBUG=false
VERBOSE_LOGGING=false

# Ignorer les erreurs (Production - à éviter)
IGNORE_TYPESCRIPT_ERRORS=false
IGNORE_ESLINT_ERRORS=false

# Analyse des bundles
ANALYZE=false

# ===========================================
# BASE DE DONNÉES AVANCÉE
# ===========================================
# Connection Pool
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_QUERY_TIMEOUT=30000

# ===========================================
# CACHE ET PERFORMANCE
# ===========================================
# Redis Cache
REDIS_PASSWORD=your-redis-password
REDIS_TTL=3600

# Cache TTL (millisecondes)
CACHE_CORRECTIONS_TTL=1800000
CACHE_EXERCISES_TTL=3600000
CACHE_EXPLANATIONS_TTL=86400000

# ===========================================
# SÉCURITÉ AVANCÉE
# ===========================================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=your-session-secret
SESSION_MAX_AGE=86400000

# ===========================================
# MONITORING AVANCÉ
# ===========================================
# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# ===========================================
# FEATURES FLAGS
# ===========================================
# Activer/désactiver des fonctionnalités
FEATURE_AI_CORRECTIONS=true
FEATURE_AI_EXERCISES=true
FEATURE_AI_ASSISTANT=true
FEATURE_ANALYTICS=true
FEATURE_PERFORMANCE_MONITORING=true
FEATURE_ERROR_TRACKING=true

# ===========================================
# CONFIGURATION LOCALE (Optionnel)
# ===========================================
# Timezone
TZ=UTC

# Locale
NEXT_PUBLIC_LOCALE=fr
NEXT_PUBLIC_TIMEZONE=Europe/Paris

# ===========================================
# NOTES IMPORTANTES
# ===========================================
# 1. Ne jamais commiter ce fichier avec des vraies valeurs
# 2. Utiliser des clés de test pour le développement
# 3. Roter les clés API régulièrement
# 4. Utiliser des mots de passe forts (32+ caractères)
# 5. Activer 2FA sur tous les services
# 6. Monitorer l'utilisation des APIs pour éviter les dépassements
# 7. Configurer des alertes pour les seuils de coûts
# 8. Tester tous les services avant le déploiement
